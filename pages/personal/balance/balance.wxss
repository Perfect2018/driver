/* pages/personal/balance/balance.wxss */
page{
  background-color: #ececec;
  padding: 20rpx;
  box-sizing: border-box;
}

.detail{
  background-color: rgb(201, 22, 35);
  color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 50rpx;
  box-sizing: border-box;
  box-shadow: 5rpx 5rpx 5rpx 3rpx #ccc;
}

.left>view:first-child{
  font-size: 30rpx;
}

.left>view:nth-child(2){
  font-size: 40rpx;
  font-weight: 600;
  padding: 10rpx 0;
}

.left>view:last-child{
  font-size: 26rpx;
}

.right{
  display: flex;
  align-items: center;
  font-size: 26rpx;
}

.bgcolor-white{
  padding: 20rpx 40rpx;
  font-size: 30rpx;
  color: #000;
}

.bgcolor-white>view{
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 4rpx solid #ccc;
  box-sizing: border-box;
}

.bgcolor-white>view>view{
  display: flex;
  align-items: center;
}

.freeze{
  margin: 0 20rpx;
}