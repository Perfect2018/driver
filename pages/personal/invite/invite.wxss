.title{
  font-size: 28rpx;
  color: #000;
  font-weight: 600;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.bgcolor-white{
  padding: 10rpx 40rpx 50rpx;
  font-size: 28rpx;
  color: #000;
}

.bgcolor-white>view{
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 4rpx solid #ccc;
}

.top{
  padding: 20rpx 40rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.top>view{
  border: none;
}

.top>view>view>text{
  margin-left: 20rpx;
  box-sizing: border-box;
}

.bgcolor-white>view text{
  color: #ccc;
}

.btn{
  background-color: #c11629;
  color: #fff;
  font-size: 30rpx;
  text-align: center;
  line-height: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  margin-top: 100rpx;
}