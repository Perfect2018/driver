/* pages/personal/withdraw/withdraw.wxss */
page{
  background-color: #ececec;
}

.bank{
  background-color: #fff;
  padding: 10rpx 20rpx;
  margin: 20rpx 0;
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
}

.bank>view{
  display: flex;
  align-items: center;
}

.zhaoshang{
  color: #E50012;
  font-size: 80rpx;
  margin-right: 20rpx;
}

.bank-name{
  color: #000;
  font-weight: 600;
}

.bank-num{
  color: #8a8a8a;
}

.money{
  background-color: #fff;
  padding: 30rpx 20rpx 0rpx;
  font-weight: 600;
  color: #000;
  box-sizing: border-box;
}

.num{
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #ccc;
}

.money>view:last-child{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #b5b5b5;
  font-weight: normal;
}

.money>view>text:first-child{
  font-size: 60rpx;
  color: #000;
  font-weight: normal;
}

.money>view>text:last-child{
  font-size: 28rpx;
  color: #2878B8;
}

.bottom{
  padding: 50rpx 20rpx;
}

.confirm{
  width: 100%;
  height: 100rpx;
  border-radius: 16rpx;
  background-color: #C2192C;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  line-height: 100rpx;
}

.help{
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 28rpx;
  color: #b5b5b5;
}