/* pages/personal/personal/personal.wxss */
page{
  background-color: #ececec;
  padding: 0 10rpx;
  box-sizing: border-box;
}

.header{
  padding: 20rpx;
  height: 200rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.userInfo{
  display: flex;
}

.userInfo image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.userInfo>view{
  font-size: 30rpx;
  margin-left: 20rpx;
  box-sizing: border-box;
}

.plate{
  background-color: #607BF1;
  color: #fff;
  font-size: 28rpx;
  width: 150rpx;
  text-align: center;
  border-radius: 8rpx;
  height: 40rpx;
  line-height: 40rpx;
  margin-top: 10rpx;
}

.detail{
  background-color: #CFCFCF;
  width: 200rpx;
  text-align: center;
  line-height: 50rpx;
  height: 50rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #fff;
}

.money{
  background-color: #fff;
  border-radius: 16rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 20rpx;
}

.balance,.btn{
  width: 50%;
  text-align: center;
  height: 120rpx;
  font-size: 30rpx;
}

.balance{
  border-right: 1rpx solid #ececec;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.balance text{
  color: #C11629;
  font-size: 36rpx;
  margin-bottom: 10rpx;
}

.btn{
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn view{
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #C11629;
  border: 2rpx solid #C11629;
  border-radius: 16rpx;
}

.my-car{
  background-color: #fff;
  display: flex;
  height: 100rpx;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 40rpx;
  margin: 20rpx 0;
  box-sizing: border-box;
}

.my-car view{
  display: flex;
  align-items: center;
}

.icon-left{
  color: #ccc;
  font-size: 50rpx;
  margin-right: 40rpx;
}

.icon-right{
  margin-left: 30rpx;
  color: #ccc;
}

.my-car>view>view{
  font-size: 30rpx;
  /* font-weight: 600; */
  color: #000;
}

.my-list{
  background-color: #fff;
  padding: 0 10rpx;
}

.my-item{
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 4rpx solid #ccc;
}

.my-item>view{
  display: flex;
  padding: 10rpx 40rpx;
  align-items: center;
}

.my-list>view:last-child{
  border: none;
}