page{
  height: 100%;
}

.bgcolor-white>view.title{
  font-size: 32rpx;
  color: #000;
  text-align: center;
  font-weight: 600;
  display: block;
}

.bgcolor-white>view{
  padding: 20rpx;
  display: flex;
  /* justify-content: space-between; */
  align-items: center;
  height: 100rpx;
  box-sizing: border-box;
}

input{
  color: #666;
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  border: 1rpx solid #000;
  padding-left: 20rpx;
}

.bgcolor-white>view>view{
  font-size: 28rpx;
  color: #000;
  margin-right: 20rpx;
}

.info>view>text{
  font-size: 28rpx;
}

.bgcolor-white>view.scan{
  height: 300rpx;
  display: flex;
  align-items: flex-start;
}

.scan image{
  width: 400rpx;
  height: 200rpx;
}

.btns{
  display: flex;
  justify-content: space-evenly;
}

.btns>view{
  background-color: #c11629;
  font-size: 28rpx;
  color: #fff !important;
  width: 180rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  border-radius: 16rpx;
}