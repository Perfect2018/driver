/* pages/nav/handing/hangding.wxss */
.tip{
  text-align: center;
  height: 50rpx;
  line-height: 50rpx;
  color: #666;
  font-size: 24rpx;
}

.bill{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  font-size: 28rpx;
  color: #000;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.bill image{
  width: 300rpx;
  height: 150rpx;
}

.bill view{
  text-align: center;
}

.title{
  font-size: 28rpx;
  color: #000;
  font-weight: 600;
  /* margin-top: 20rpx; */
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.info{
  padding: 20rpx 20rpx 100rpx;
  box-sizing: border-box;
}

.item{
  padding: 0 20rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
}

.item>text{
  font-size: 28rpx;
  color: #000;
  margin-right: 20rpx;
}

.item input{
  height: 70rpx;
  border: 1rpx solid #000;
  padding-left: 20rpx;
  color: #bbb;
  font-size: 28rpx;
}

.commit{
  background-color: #c11629;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  color: #fff;
  border-radius: 50rpx;
  margin-top: 50rpx;
}
