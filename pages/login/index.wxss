/**index.wxss**/
page{
  background-color: #ececec;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.logo{
  width: 100%;
  height: 400rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.logo image{
  width: 300rpx;
  height: 300rpx;
}

.login{
  background-color: #fff;
  height: 300rpx;
  padding: 30rpx 20rpx;
  margin-bottom: 50rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.login>view{
  height: 100rpx;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
}

.login>view:first-child{
  border-bottom: 1rpx solid #eee;
}

.login>view>text{
  font-size: 50rpx;
}

.login input{
  height: 100%;
  width: 400rpx;
  margin-left: 10rpx;
}

.btn{
  background-color: #C2192C;
  border-radius: 8rpx;
  color: #fff;
  font-size: 32rpx;
  width: 80%;
  height: 100rpx;
  line-height: 100rpx;
  margin: 0 auto;
  text-align: center;
}

.switch-item{
  margin-top: 20rpx;
  margin-bottom: 50rpx;
  display: flex;
  justify-content: space-around;
}

.switch{
  font-size: 36rpx;
  color: #C2192C;
  text-align: center;
}

.tip{
  text-align: center;
}

.tip text{
  color: #C2192C;
}

.service{
  /* display: block; */
  width: 100%;
  /* position: fixed; */
  margin-top: 100rpx;
  bottom: 100rpx;
  box-sizing: border-box;
  /* margin: 0 auto; */
}

.service view{
  text-align: center;
}

.place{
  color: #dcdcdc;
}

.code{
  border: 1rpx solid #C2192C;
  width: 260rpx;
  height: 60rpx;
  text-align: center;
  color: #C2192C;
  font-size: 36rpx;
  line-height: 60rpx;
  border-radius: 16rpx;
}

.register{
  background-color: #fff;
  height: 350rpx;
  padding: 30rpx 20rpx;
  margin-bottom: 50rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.register>view{
  height: 100rpx;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
}

.register>view:first-child{
  border-bottom: 1rpx solid #eee;
}

.register input{
  height: 100%;
  width: 400rpx;
  margin-left: 10rpx;
}